                    <StackPanel Orientation="Vertical">
                        <Button x:Name="AddTaskButton" Click="AddTaskButton_Click" >add task</Button>
                        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Stretch" Height="auto" VerticalAlignment="Stretch" Width="auto">
                            <StackPanel x:Name="KanbanBoard" Height="auto" Width="auto" HorizontalAlignment="Stretch" Orientation="Horizontal">
                                <!--<ListBox x:Name="NotDoingList">
                                </ListBox>
                                <ListBox x:Name="DinaiseretList">
                                </ListBox>
                                <ListBox x:Name="JulehyggeList">
                                </ListBox>-->

                            </StackPanel>
                        </Border>
                        
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="31*"/>
                        <ColumnDefinition Width="763*"/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
