<Window x:Class="Projektstyring.ModalEditTask"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projektstyring"
        mc:Ignorable="d"
        Title="ModalEditTask" Height="450" Width="800">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="1" Grid.Row="1">
            <TextBox x:Name="Title" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Title" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="Text" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Text" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="Responsible" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Responsible" VerticalAlignment="Top" Width="120"/>
            <ComboBox x:Name="DropDown"  />
            <Button Content="Add Task"/>
            <Label x:Name="Title1" Content="Titel" HorizontalAlignment="Left" Margin="58,28,0,0" VerticalAlignment="Top"/>
            <Label Content="Beskrivelse" HorizontalAlignment="Left" Margin="58,74,0,0" VerticalAlignment="Top"/>
            <Label Content="Ansvarlig" HorizontalAlignment="Left" Margin="58,123,0,0" VerticalAlignment="Top"/>
        </StackPanel>


        <TextBlock

            Grid.Row="0"
        FontSize="28"
        Text="Opret Task" Margin="0,0,0,161" />

        <TextBlock
            FontSize="8"
            Text=" Navn på Task" Height="20" VerticalAlignment="Top" Margin="25,72,0,0" />
        <Label Content="Indtast navn" HorizontalAlignment="Center" Margin="0,90,0,0" VerticalAlignment="Top" Width="750" Height="29"/>
        <Rectangle HorizontalAlignment="Center" Margin="0,88,0,303" Stroke="Black" Width="750"/>

        <TextBlock
 FontSize="8"
 Height="15" VerticalAlignment="Top" Margin="25,164,-5,0" ><Run Language="da-dk" Text="Beskrivelse"/></TextBlock>
        <Label Content="Skriv beskrivelse" HorizontalAlignment="Center" VerticalAlignment="Top" Width="750" Height="29" RenderTransformOrigin="0.497,5.477" Margin="0,207,0,0"/>
        <Rectangle HorizontalAlignment="Center" Margin="0,185,0,23" Stroke="Black" Width="750"/>





    </Grid>
</Window>
