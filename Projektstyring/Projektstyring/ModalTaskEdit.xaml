<Window x:Class="Projektstyring.ModalTaskEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projektstyring"
        ResizeMode="NoResize"
        Title="Edit Task" Height="730" Width="550">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="50" />
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="ModalEditTaskTitle" Grid.Row="0" Grid.Column="1"
               Text="Edit Task"
               FontSize="20"
               FontWeight="Bold"
               Foreground="#333"
               HorizontalAlignment="Center"
               Margin="0,20,0,20"/>

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0"
                   Text="Title:"
                   VerticalAlignment="Center"
                   Margin="0,10"/>

            <TextBox x:Name="Title"
                 Grid.Row="0" Grid.Column="1"
                 Margin="0,10"
                 Padding="5"
                 MinWidth="180"
                 TextWrapping="Wrap"/>

            <TextBlock Grid.Row="1" Grid.Column="0"
                   Text="Description:"
                   VerticalAlignment="Top"
                   Margin="0,10"/>

            <TextBox x:Name="Text"
                 Grid.Row="1" Grid.Column="1"
                 Margin="0,10"
                 Padding="5"
                 MinWidth="180"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 Height="100"
                 VerticalScrollBarVisibility="Auto"/>

            <TextBlock Grid.Row="2" Grid.Column="0"
                   Text="Responsible:"
                   VerticalAlignment="Center"
                   Margin="0,10"/>

            <TextBox x:Name="Responsible"
                 Grid.Row="2" Grid.Column="1"
                 Margin="0,10"
                 Padding="5"
                 MinWidth="180"
                 TextWrapping="Wrap"/>

            <TextBlock Grid.Row="3" Grid.Column="0"
                   Text="Stage:"
                   VerticalAlignment="Center"
                   Margin="0,10"/>
            <ComboBox x:Name="Dropdown"
                  Grid.Row="3" Grid.Column="1"
                  Margin="0,10"
                  Padding="5"
                  MinWidth="180"/>

            <TextBlock 
            Text="Background Color:"
            VerticalAlignment="Top"
            Margin="0,10"
            Grid.Row="4"
            Grid.Column="0"/>

            <Grid Margin="0,10" Width="auto" Grid.Row="4" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="30"/>
                </Grid.ColumnDefinitions>
                <Label Content="R" Grid.Row="0" Grid.Column="0"/>
                <Label Content="0" Grid.Row="0" Grid.Column="1" HorizontalContentAlignment="Right"/>
                <Slider Grid.Row="0" Grid.Column="2" x:Name="RedSlider" Minimum="0" Maximum="255" Value="127" Width="auto" TickFrequency="1"
                        TickPlacement="None" Margin="0,2" />
                <Label Content="255" Grid.Row="0" Grid.Column="3" HorizontalContentAlignment="Left"/>

                <Label Content="G" Grid.Row="1" Grid.Column="0"/>
                <Label Content="0" Grid.Row="1" Grid.Column="1" HorizontalContentAlignment="Right"/>
                <Slider Grid.Row="1" Grid.Column="2" x:Name="GreenSlider" Minimum="0" Maximum="255" Value="50" Width="auto" TickFrequency="1"
                        TickPlacement="None" Margin="0,2" />
                <Label Content="255" Grid.Row="1" Grid.Column="3" HorizontalContentAlignment="Left"/>


                <Label Content="B" Grid.Row="2" Grid.Column="0"/>
                <Label Content="0" Grid.Row="2" Grid.Column="1" HorizontalContentAlignment="Right"/>
                <Slider Grid.Row="2" Grid.Column="2" x:Name="BlueSlider" Minimum="0" Maximum="255" Value="205" Width="auto" TickFrequency="1" TickPlacement="None" Margin="0,2" />
                <Label Content="255" Grid.Row="2" Grid.Column="3" HorizontalContentAlignment="Left"/>


                <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4" x:Name="ColorPreview"
                         Height="40" Margin="0,10,0,0"
                         BorderBrush="Black" BorderThickness="1"
                         Background="White"
                        Width="50"/>
            </Grid>

            <TextBlock Grid.Row="5" Grid.Column="0" 
                   Text="Start:"
                   VerticalAlignment="Center"
                   Margin="0, 20"/>

            <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal" Margin="0, 20">
                <DatePicker x:Name="StartDatePicker"
                        Margin="0,0,10,0"
                        Width="150"/>
                <ComboBox x:Name="StartTimeCombo"
                      Width="80"
                      Margin="0,0,10,0"
                      VerticalAlignment="Center"/>
            </StackPanel>


            <TextBlock Grid.Row="6" Grid.Column="0"
                    Text="Deadline:"
                    VerticalAlignment="Center"
                    Margin="0, 20"/>

            <StackPanel Grid.Row="6" Grid.Column="1" Orientation="Horizontal" Margin="0, 20">
                <DatePicker x:Name="DeadlineDatePicker"
                        Margin="0,0,10,0"
                        Width="150"/>
                <ComboBox x:Name="DeadlineTimeCombo"
                      Width="80"
                      VerticalAlignment="Center"/>
            </StackPanel>




            <StackPanel Grid.Row="7" Grid.Column="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
                
                <Button x:Name="CancelButton" Content="Cancel"
                    Width="100"
                    Margin="0,0,10,0"
                    Click="ModalCancel"
                    Background="Red"
                    Foreground="White"/>

                <Button x:Name="SaveTaskButton" Content="Save Task"
                    Width="100"
                    Height="30"
                    Background="#4CAF50"
                    Foreground="White"
                    Click="ModalEditTask"/>
            </StackPanel>
        </Grid>


    </Grid>
</Window>
